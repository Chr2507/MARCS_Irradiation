rm arcivaaa.dat

hou=$((SECONDS/3600))
min=$(((SECONDS%3600)/60))
sec=$(((SECONDS%3600)%60))
echo  "  runmarcs runtime was: $hou hour, $min minutes & $sec seconds."
echo  "   " 
