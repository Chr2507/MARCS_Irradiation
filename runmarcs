#makeinput

> Irrad.dat
SECONDS=0;
cp models/t31g45.arciv  arcivaaa.dat
./marcs

mv mxmodel.dat  models/t31g45ir.dat
mv arcivaab.dat models/t31g45ir.arciv
cp mxms7.input  models/t31g45ir.input
cp Irrad.dat    models/t31g45ir.irrad

rm spectrum.dat
rm fort.*
rm FLUX.DAT
rm arcivaaa.dat

hou=$((SECONDS/3600))
min=$(((SECONDS%3600)/60))
sec=$(((SECONDS%3600)%60))
echo  "  runmarcs runtime was: $hou hour, $min minutes & $sec seconds."
echo  "   " 
